# FinSage Environment Configuration
# Copy this to .env and fill in your actual values

# Core Configuration
STUB_MODE=true
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# Server Configuration
PORT=3001
NODE_ENV=development

# MCP Configuration
MCP_SERVER_NAME=finsage-mcp-server
MCP_SERVER_VERSION=1.0.0

# LLM Configuration (REQUIRED for actual agent functionality)
GEMINI_API_KEY=your_gemini_api_key_here
# OR
OPENAI_API_KEY=your_openai_api_key_here

# Airia Configuration (for agent orchestration)
AIRIA_API_KEY=your_airia_api_key_here
AIRIA_WEBHOOK_URL=https://your-webhook-url.com

# TrueFoundry Configuration (for model hosting)
TRUEFOUNDRY_API_KEY=your_truefoundry_api_key_here
TRUEFOUNDRY_GATEWAY_URL=https://your-gateway-url.com

# Apify Configuration (for live news scraping)
APIFY_TOKEN=your_apify_token_here
APIFY_ACTOR_ID=your_apify_actor_id_here

# Sentry Configuration (for error monitoring)
SENTRY_DSN=https://your-sentry-dsn-here

# Optional Services
NEWS_API_KEY=your_news_api_key_here
REDPANDA_BROKERS=localhost:19092

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/finsage
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
AUDIT_LOG_DIR=runtime_logs

# Individual LIVE mode flags (default: false)
# Set to true to enable live data fetching for specific tools
LIVE_NEWS=false
LIVE_QUOTES=false
LIVE_FUNDS=false
LIVE_TF_GATEWAY=false
